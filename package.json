{
	"name": "cloudflare-d1-better-auth",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"cf-typegen": "wrangler types",
		"deploy": "pnpm run build && wrangler deploy",
		"dev": "react-router dev",
		"postinstall": "npm run cf-typegen",
		"preview": "pnpm run build && vite preview",
		"typecheck": "npm run cf-typegen && react-router typegen && tsc -b",
		"generate": "drizzle-kit generate",
		"auth:generate": "pnpm dlx @better-auth/cli@latest generate --output=./schema/auth-schema.ts --config=./auth.ts --yes ",
		"migrate:local": "wrangler d1 migrations apply sample-db --local",
		"migrate:remote": "wrangler d1 migrations apply sample-db --remote"
	},
	"dependencies": {
		"@radix-ui/react-avatar": "^1.1.10",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"better-auth": "^1.3.29",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.44.6",
		"isbot": "^5.1.31",
		"lucide-react": "^0.546.0",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-router": "^7.9.2",
		"tailwind-merge": "^3.3.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.7",
		"@cloudflare/vite-plugin": "^1.13.5",
		"@react-router/dev": "^7.9.2",
		"@tailwindcss/vite": "^4.1.13",
		"@types/node": "^22",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"drizzle-kit": "^0.31.5",
		"lefthook": "^2.0.0",
		"tailwindcss": "^4.1.13",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"vite-tsconfig-paths": "^5.1.4",
		"wrangler": "^4.44.0"
	}
}
